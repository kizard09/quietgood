<div class = "bloglist">
  <ul class = "tab-links">
    <li class= "active"><a href = "#essays">Essays</a></li>
    <li><a href = "#sermons">Sermons</a></li>
    <li><a href = "#poems">Poems</a></li>
  </ul>

  <div class = "tab-content">
    <div id ="essays" class = "tab active">  
      <table>
        <tbody>
          <% @blogs.each do |blog| %>
          <tr>
            <% if blog.id == 2 || blog.id == 6 || blog.id == 8 || blog.id == 9%>
            <td class = 'blogindex'>
              <b><%= link_to blog.name, blog %></b>, by <%= blog.author %> 
            </td>
             <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div id = "sermons" class = "tab">
      <table>
        <tbody>
          <% @blogs.each do |blog| %>
          <tr>
