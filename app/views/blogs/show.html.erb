<% content_for :head do %>
  <meta property="og:url" content="<%= "http://quietgood.org" + blog_path(@blog) %>" /> 
  <meta property="og:title"  content="<%= @blog.name %>" /> 
  <meta property="og:image"  content="<%= image_tag(@blog.image_url) if @blog.image.present? %>" /> 
<% end %>
<h1 class = 'blogshowtitle'><%= @blog.name %></h1><br><br>

<div class = 'blogshow'>
  <h4>by <em><%= @blog.author %></em><br></h4>

  <h4><em><%= @blog.date %></em></h4>

  <div class = 'blogshowimage'>
    <%= image_tag(@blog.image_url) if @blog.image.present? %>
  </div>
  <div class = 'blogpost'>
    <%= simple_format(@blog.post).html_safe %>
  </div>
  <p class = "back"><%= link_to 'Back', blogs_path %></p>
