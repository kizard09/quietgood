<table>
  <thead>
    <tr>
      <th><h1>good<b>reads</b></h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <h5>Books we love by authors who inspire.</h5>
      </td>
    </tr>
    <tr>
      <td>
        <h6><em>No advertising accepted</em></h6>
      </td>
    </tr>
    <tr>
      <td>
        <div id="columns">
          <% @reads.each do |read| %>
            <div class = "readsindex">
              <div><%= link_to read.name, read %></div>
              <div><%= link_to image_tag(read.book), read %></div>
            </div>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>

